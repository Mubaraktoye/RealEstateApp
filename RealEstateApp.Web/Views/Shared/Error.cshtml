@model ErrorViewModel

@{
    ViewData["Title"] = "Error Page";
    Layout = "~/Views/Shared/_FrontPageLayout.cshtml";
}

<!-- Error Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h1 class="display-1">!!!</h1>
                <h1 class="mb-4">Error Encountered</h1>
                <p class="mb-4">We’re sorry, the page encountered an error! Maybe go to our home page or try to use a search?</p>
                <a class="btn btn-primary py-3 px-5" href="">Go Back To Home</a>
            </div>
        </div>
    </div>
</div>
<!-- Error End -->